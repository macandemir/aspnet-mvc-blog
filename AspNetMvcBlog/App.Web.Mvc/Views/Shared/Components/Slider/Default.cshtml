@model List<SliderModelView>

@foreach (var item in Model)
{
	<div class="slider-item">
		<div class="slider-item-content">
			<div class="post-thumb mb-4">
				<a asp-action="@item.Name" asp-controller="Category">
					<img src="@item.Image" alt="" class="img-fluid">
				</a>
			</div>
			<div class="slider-post-content">
				<span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">@item.Name</span>
				<h3 class="post-title mt-1"><a asp-action="@item.Name" asp-controller="Category">@item.Title</a></h3>
				<span class=" text-muted  text-capitalize">@item.Date</span>
			</div>
		</div>
	</div>
	
}
